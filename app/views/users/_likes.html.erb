<% if microposts.any? %>
  <ul class="list-unstyled">
    <% microposts.each do |micropost| %>
      <li class="media">
        <div class="media-body">
          <div>
            <%= micropost.user.name %>
          </div>
          <div>
            <p class="mb-0"><%= micropost.content %></p>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(micropost.user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate microposts %>
<% end %>